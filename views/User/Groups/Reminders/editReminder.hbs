<div class="container-fluid p-4">
    <form method="post">
        <div class="form-group mb-2">
            <label for="inputName">Nom</label>
            <input type="text" class="form-control" id="inputName" name="nameReminder" placeholder="Nom du remindr" value="{{Infos.selectedReminder.name}}" required>
        </div>
        <div class="form-group mb-2">
            <label for="inputDate">Date</label>
            <input type="datetime-local" class="form-control" id="inputDate" name="dateReminder" value="{{Infos.selectedReminder.date}}" required>
        </div>
        <div class="form-group mb-2">
            <label for="inputDesc">Description</label>
            <textarea class="form-control" id="inputDesc" name="descriptionReminder" rows="3">{{Infos.selectedReminder.description}}</textarea>
        </div>
        <div class="form-group mb-2">
            <label for="inputColor">Couleur</label>
            <input type="color" class="form-control" id="inputColor" name="colorReminder" value="{{Infos.selectedReminder.colorHex}}">
        </div>
        <button type="submit" class="btn btn-success">Confirmer</button>
    </form>
</div>