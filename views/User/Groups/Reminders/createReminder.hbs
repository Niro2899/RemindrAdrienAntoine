<div class="container-fluid p-4">
    <form method="post">
        <div class="form-group mb-2">
            <label for="inputName">Nom</label>
            <input type="text" class="form-control" id="inputName" name="nameReminder" placeholder="Nom du remindr" required>
        </div>
        <div class="form-group mb-2">
            <label for="inputDate">Date</label>
            <input type="datetime-local" class="form-control" id="inputDate" name="dateReminder" required>
        </div>
        <div class="form-group mb-2">
            <label for="inputDesc">Description</label>
            <textarea class="form-control" id="inputDesc" name="descriptionReminder" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Confirmer</button>
    </form>
</div>